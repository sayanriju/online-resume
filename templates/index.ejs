<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

		<title>Sayan's Online Resume</title>

		<link rel="stylesheet" href="assets/reset.css">
		<link rel="stylesheet" href="assets/reveal.css">
		<link rel="stylesheet" href="assets/theme/black.css" id="theme">
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
		<style>
			.reveal i.fa { font-family:FontAwesome; font-style: normal; }
			span.icon {margin-left: 11px;;}
			/*a span.icon:hover {color:red;font-size: 150%; !important}*/
			div.social-bar {margin-top: 5em;}

			tr.th {font-weight:bolder;font-style:italic; font-size: 110%;}

			.bigarrow {font-size: 200% !important;}

			table tr td{font-size:80% !important;border: none !important; }
			table.fullsize tr td{font-size:100% !important;}
			table.noborder {border: none !important;}

			table.skillset tr:nth-child(even) {background: #033b01;}

			p.alt-colors span:nth-child(even) {color: #d88d00;}
			p.alt-colors span:nth-child(odd) {color: #07b100;}

			span.green {color: #d88d00;}
			span.orange {color: #07b100;}
		</style>
	</head>
	<body>
		<div class="reveal">
			<div class="slides">
			<% for (const section of ["welcome", "intro", "portfolio", "floss", "employment", "skills", "quali", "contact"]) { %>
				<section id="<%= section %>"><%- await include(`partials/${section}`, { data }) %></section>
			<% } %>
			</div>
		</div>

		<script src="assets/reveal.js"></script>
		<script>
			// More info about initialization & config:
			// - https://revealjs.com/initialization/
			// - https://revealjs.com/config/
			Reveal.initialize({
				controls: true,
				progress: true,
				history: true,
				center: true,
				width: 1080,
				height: 960,
				margin: 0.1,
				//      minScale: 1.0,
				//      maxScale: 1.0,
				transitionSpeed: 'slow',
			});
		</script>
	</body>
</html>
